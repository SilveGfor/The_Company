<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_dark_background">

    <Button
        android:id="@+id/fragmentSettings_btn_changeAvatar"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="сменить аватар"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentSettingsProfile_CV" />

    <Button
        android:id="@+id/fragmentSettings_btn_changeNick"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="сменить ник"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="@+id/fragmentSettings_btn_changeAvatar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fragmentSettings_btn_changeAvatar"
        app:layout_constraintTop_toBottomOf="@+id/fragmentSettings_btn_changeAvatar" />

    <Button
        android:id="@+id/fragmentSettings_btn_changePassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="сменить пароль"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="@+id/fragmentSettings_btn_changeAvatar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fragmentSettings_btn_changeAvatar"
        app:layout_constraintTop_toBottomOf="@+id/fragmentSettings_btn_changeNick" />

    <Button
        android:id="@+id/fragmentSettings_btn_close"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="выйти из аккаунта"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="@+id/fragmentSettings_btn_changeAvatar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/fragmentSettings_btn_changeAvatar"
        app:layout_constraintTop_toBottomOf="@+id/fragmentSettings_btn_changeNick" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="30dp" />